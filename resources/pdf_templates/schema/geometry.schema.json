{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/pdf-geometry.schema.json",
  "title": "PDF Geometry Schema",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "schema_version": { "type": "string", "default": "1.0" },
    "row": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "ROW1_CENTER": { "type": "number" },
        "ROW_STEP": { "type": "number" },
        "DETAIL_ROWS": { "type": "integer" },
        "STEP_Y": { "type": "number" },
        "PADDING_X": { "type": "number" }
      }
    },
    "margins": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "right_margin": { "type": "number", "default": 0.0 }
      }
    },
    "cols": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "patternProperties": {
        "^[A-Za-z0-9_\\-]+$": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "x": { "type": "number" },
            "w": { "type": "number" }
          },
          "required": ["x", "w"]
        }
      }
    },
    "rects": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "patternProperties": {
        "^[A-Za-z0-9_\\-]+$": {
          "type": "array",
          "minItems": 4,
          "maxItems": 4,
          "items": { "type": "number" }
        }
      }
    }
  },
  "anyOf": [
    { "required": ["cols"] },
    { "required": ["rects"] }
  ]
}
